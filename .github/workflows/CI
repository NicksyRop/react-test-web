name: CI
env:
  SCREENER_API_KEY: ${{ secrets.SCREENER_API_KEY }}
  SAUCE_USERNAME: ${{ secrets.SAUCE_USERNAME }}

on:
  push:
    branches: [main]
  pull_request:
    branches: [main]

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      - uses: actions/setup-node@v3
        with:
          node-version: 16
      - name: Install dependencies
        run: |
          cd react-test-web
          npm ci
      - name: Build the app
        run: |
          cd react-test-web
          npm run build
      - name: Run component tests
        run: |
          cd react-test-web
          npm run test
      - name: Start the app
        run: |
          cd react-test-web
          npm start &
          npx wait-on --timeout 60000
